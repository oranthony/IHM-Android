<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tw__composer_deep_gray">

    <ImageView
        android:id="@+id/normalImage"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/dsc6671"
        android:layout_height="@dimen/blur_image_height" />

    <ImageView
        android:id="@+id/blurredImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/blur_image_height"
        android:alpha="0" />

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/blur_image_height"
        android:alpha="0" />

    <polytechnice.ihm.projet.siPresentation.BlurScrollView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/fakeId"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:background="@android:color/transparent" />

            <LinearLayout
                android:id="@+id/layoutScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dgts__text_light"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="48px"
                    android:paddingRight="24px"
                    android:paddingTop="24px"
                    android:textColor="#5894CF"
                    android:text="@string/si3_presentation"/>
            </LinearLayout>
        </LinearLayout>

    </polytechnice.ihm.projet.siPresentation.BlurScrollView>

</RelativeLayout>
